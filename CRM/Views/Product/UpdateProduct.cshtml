@model Product
@{
    ViewData["Title"] = "UpdateCustomer";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<h1>Ürün Güncelleme</h1>

@using (Html.BeginForm("UpdateProduct", "Product", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Ürün Adı")
        @Html.TextBoxFor(x=>x.ProductName, new{@class="form-control"})
        @Html.ValidationMessageFor(x => x.ProductName, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.Label("Ürün Fiyatı")
        @Html.TextBoxFor(x=>x.ProductPrice, new{@class="form-control"})
        @Html.ValidationMessageFor(x => x.ProductPrice, "", new { @class = "text-danger" })
    </div>

    <button class="btn btn-outline-success">Ürünü Güncelle</button>
}

