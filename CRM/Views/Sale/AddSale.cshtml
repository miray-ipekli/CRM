@model CRM.Models.SaleViewModel
@{
    ViewData["Title"] = "AddSale";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<h1>Satış Ekle</h1>
<form method="post">

    <div class="form-group">
        @Html.Label("Satış Tarihi")
        <input type="date" asp-for="Sale.SaleDate" class="form-control" required/>
    </div>
    <div class="form-group">
        @Html.Label("Müşteri Adı")
        @Html.DropDownListFor(x => x.Sale.Customer.CustomerId, (List<SelectListItem>)ViewBag.costumerList, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("Ürün Adı")
        @Html.DropDownListFor(x => x.Sale.Product.ProductId, (List<SelectListItem>)ViewBag.productList, new { @class = "form-control" })
    </div>
    <button class="btn btn-outline-success">Satışı Ekle</button>
</form>

