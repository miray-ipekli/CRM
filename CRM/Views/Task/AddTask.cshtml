@model EmployeeTask
@{
    ViewData["Title"] = "AddTask";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<h1>Yeni Görev</h1>
<form method="post">

    <div class="form-group">
        @Html.Label("Görev Adı")
        <input type="text" asp-for="Task" class="form-control" required/>
    </div>
    <div class="form-group">
        @Html.Label("Görev Açıklaması")
        <textarea asp-for="TaskDescription" class="form-control" required> </textarea>
    </div>
    <div class="form-group">
        @Html.Label("Görevli Çalışan")
        @Html.DropDownListFor(x => x.AppUser.Id, (List<SelectListItem>)ViewBag.users, new { @class = "form-control" })
    </div>

    <button class="btn btn-outline-success">Görevi Ekle</button>
</form>

